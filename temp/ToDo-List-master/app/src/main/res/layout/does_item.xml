<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/bgitemdoes">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activities"
            android:textColor="#000C5D"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#525252"
            android:layout_below="@id/text_view_title"
            android:layout_marginTop="5dp"
            android:text="1"
            />

        <TextView
            android:id="@+id/X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/text_view_description"
            android:layout_below="@id/text_view_title"/>

        <TextView
            android:id="@+id/text_view_duetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_title"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/X"
            android:text="3"
            android:textColor="#095AAB"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_view_duedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="17dp"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text="Do Date"
            android:textColor="#095AAB"
            android:textSize="18sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>